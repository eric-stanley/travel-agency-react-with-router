{
  "framework": "react-router",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static"
    },
    {
      "src": "build/server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["build/client/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/build/client/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/build/client/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/build/server/index.js"
    }
  ]
}
